# 1. Результаты сессии содержат оценки 5 экзаменов по каждой
# группе. Определить средний балл для трех групп студентов одного
# потока и выдать список групп в порядке убывания среднего балла. Ре-
# зультаты вывести в виде таблицы с заголовком.

def sotrirovka(spisok_spiskov):
    new_spisok = []
    for k in range(3):
        sr = 0
        for i in spisok_spiskov:
            if i[1] > sr:
                sr = i[1]
        ind = -1
        for j in spisok_spiskov:
            ind += 1
            if sr == j[1]:
                new_spisok.append(j)
                spisok_spiskov.pop(ind)
    return new_spisok

class Sessiya:

    def __init__(self):
        self.potok = []

    def ozhenki_group(self, group_name, ozhenka1, ozhenka2, ozhenka3, ozhenka4, ozhenka5):
        self.potok.append([group_name, (ozhenka1 + ozhenka2 + ozhenka3 + ozhenka4 + ozhenka5)/5])

    def get_spisok(self):
        otsortirovano = sotrirovka(self.potok)
        print('ГРУППА    ОЦЕНКИ')
        for i in otsortirovano:
            print(*i)

groups = Sessiya()
groups.ozhenki_group('БИВТ-22-7 ', 5, 4, 5, 4, 5, )
groups.ozhenki_group('БФЗ-24-1  ', 5, 5, 5, 5, 5, )
groups.ozhenki_group('БНТМ-24-3 ', 2, 3, 2, 4, 3, )
groups.get_spisok()
